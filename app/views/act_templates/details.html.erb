<h1>Actor #<%= @spec_actor.id%> details</h1>

<a href="/actors">Go back</a>

<hr>
<dl>
  <dt> Name </dt>
  <dd> <%= @spec_actor.name%> </dd>
  <dt> Dob </dt>
  <dd> <%= @spec_actor.dob%> </dd>
  <dt> Bio </dt>
  <dd> <%= @spec_actor.bio%> </dd>
  <dt> Image </dt>
  <dd> <img src="http://robohash.org/<%=@spec_actor.image%>"> </dd>
  <dt> Created at </dt>
  <dd> <%= @spec_actor.created_at%> </dd>
  <dt> Updated at </dt>
  <dd> <%= @spec_actor.updated_at%> </dd>
</dl>
<hr>

<h2>Filmography</h2>
<%= @characters%>
<table border=1>
  <tbody>
    <tr>
      <th>Title</th>
      <th>Year</th>
      <th>Director</th>
      <th>Character name</th>
      <th></th>
    </tr>
    <% @characters.each do |ind_char|%>
    <tr>
      <td>
        <%= title = Movie.where({ :id => ind_char.movie_id}).at(0).title%>
      </td>
      <td>
        <%=Movie.where({ :id => ind_char.movie_id}).at(0).year%>
      </td>
      <td>
        <%= Director.where({ :id => Movie.where({ :title => title}).at(0).director_id}).at(0).name%>
      </td>
      <td><%= ind_char.name %></td>
      <td>
        <a href="/movies/<%=Movie.where({ :title => title}).at(0).director_id%>">Show details</a>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>