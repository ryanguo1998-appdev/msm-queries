<hr>
<dl>
  <dt> Name </dt>
  <dd> <%= @spec_director.name%> </dd>
  <dt> Dob </dt>
  <dd> <%= @spec_director.dob%> </dd>
  <dt> Bio </dt>
  <dd> <%= @spec_director.bio%> </dd>
  <dt> Image </dt>
  <dd> <img src="http://robohash.org/<%=@spec_director.image%>"> </dd>
  <dt> Created at </dt>
  <dd> <%= @spec_director.created_at%> </dd>
  <dt> Updated at </dt>
  <dd> <%= @spec_director.updated_at%> </dd>
</dl>
<hr>

<table border=1>
  <tbody>
    <tr>
      <th>ID</th>
      <th>Image</th>
      <th>Title</th>
      <th>Year</th>
      <th>Director</th>
      <th></th>
    </tr>
    <% array_slot = 0%>
    <% @films.each do |ind_film|%>
    <tr>
      <td><%=ind_film.id%></td>
      <td>
        <img src="http://robohash.org/<%=ind_film.image%>">
      </td>
      <td><%=ind_film.title%></td>
      <td><%=ind_film.year%></td>
      <td><%=@spec_director.name%></td>
      <td>
        <a href="/movies/<%=ind_film.id%>">Show details</a>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>